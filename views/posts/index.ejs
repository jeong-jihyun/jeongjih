<!DOCTYPE html>
<html>
<head>
	<title></title>
	<% include ../partials/head %>
</head>
<body>
	<header>
		<% include ../partials/header %>
	</header>
	<div class="posts">
		<% include partials/top %>
		<!-- main start -->
		<!-- views/posts/index.ejs -->
		<div class="index">
			<a href="/posts/new"><button>New</button></a>
			<ul>
				<li class="header">Title <span>Date</span></li>
				<% data.forEach(function(e){ %>
				<li>
					<a href="/posts/<%= e._id%>"><%= e.title%></a>
					<span><%= e.createAt.toLocaleDateString() %></span>
				</li>
				<% })%>
			</ul>
		</div>
		<!-- main end -->
	</div>
	<footer>
		<% include ../partials/footer %>
	</footer>
</body>
</html>