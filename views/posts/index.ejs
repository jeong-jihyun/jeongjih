<!DOCTYPE html>
<html>
<head>
	<title></title>
	<% include ../partials/head %>
</head>
<body>
	<header>
		<% include ../partials/header %>
	</header>
	<div class="posts">
		<% include partials/top %>
		<!-- main start -->
		<!-- views/posts/index.ejs -->
		<div class="index">
			<a href="/posts/new"><button>New</button></a>
			<% if (user) {%>
				<a href="/logout" class="float_right"><button>LogOut</button></a>
				<a href="/users/<%= user.id%>" class="float_right"><button>MyProfile(<%= user.nickname%>)</button>
			<% }else{%>
				<a href="/login" class="float_right"><button>Login</button></a>
				<a href="/users/new" class="float_right"><button>Sign Up</button>			
			<% }%>
			<ul>
				<li class="header">Title 
					<span class="float_right">Date</span>
					<span class="float_right">Author</span>
				</li>
				<% data.forEach(function(e){ %>
				<li>
					<a href="/posts/<%= e._id%>"><%= e.title %></a>
					<span class="float_right"><%= e.createAt.toLocaleDateString() %></span>
					<span class="float_right"><%= e.author.nickname %></span>
				</li>
				<% })%>
			</ul>
		</div>
		<!-- main end -->
	</div>
	<footer>
		<% include ../partials/footer %>
	</footer>
</body>
</html>